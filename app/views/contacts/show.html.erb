<h1>This is Your Best Friend</h1>
<h2>You are Such Good Friends</h2>
<h3>Like the Very Very Best of Friends<h3>
<h4>This is All That You Know About Your Best Friend <%= @contact.name %> : </h2>

  <p>Phone:<%=@contact.phone_number%><p>
<div class="row">
  <%= link_to "Edit Contact", "#", class: "btn btn-pink", data: {toggle: "modal", target: "#updateContact" } %>

  <%= link_to "Send A Message", "#", class: "btn btn-pink", data: {toggle: "modal", target: "#sendMessageContact" } %>

  <%= link_to "Delete Contact", contact_path(@contact), class: "btn btn-pink", data: {
                                                        confirm: "Are you sure you are done being friends?",
                                                        method: "delete" } %>

<div class="modal fade" id="updateContact" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Contact</h4>
      </div>
      <div class="modal-body">
        <%= render('contacts/form') %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="sendMessageContact" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Contact</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@message) do |f| %>
          <%= f.hidden_field :from, value: "8027780526" %>
          <div class ="form-group">
            <%= f.hidden_field :to, value: @contact.phone_number %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_field :body, class: "form-control" %>
          </div>
          <%= f.submit "Send Message", :class => "btn btn-info btn-show" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
