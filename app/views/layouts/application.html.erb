<!DOCTYPE html>
<html>
<head>
  <title>Texter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar-default navbar navbar-fixed-top" role="navigation">
  <!-- <div class="pull-right"> -->
    <% if !current_user %>
     <%= link_to "Create Account", new_user_registration_path, :class => "navbar-text pull-right" %>
     <%= link_to "Sign In", new_user_session_path, :class => "navbar-text pull-right" %>
    <% else %>
      <%= link_to "Profile Page", user_path(current_user), :class => "navbar-text pull-right" %>
      <%= link_to "Sign Out", destroy_user_session_path, :class => "navbar-text pull-right"  %>
    <% end %>
  <!-- </div> -->
</nav>
<div class="container">
  <% if flash[:alert] %>
    <div class="alert alert-danger alert-purple">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>


  <%= yield %>
</div>

</body>
</html>
