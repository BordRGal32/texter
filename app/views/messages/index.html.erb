<h1>Messages</h1>

<%= link_to 'New Message', "#", class: 'btn btn-success', data: { toggle: 'modal', target: '#newMessage'} %>

<%= render('layouts/errors', :object => @message ) %>

<div class="modal fade" id="newMessage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Message</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@message) do |f| %>
          <div class ="form-group">
            <%= f.label :to %>
            <%= f.text_field :to, class: "form-control" %>
          </div>
            <div class="form-group">
            <%= f.label :from %>
            <%= f.text_field :from, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_field :body, class: "form-control" %>
          </div>
          <%= f.submit "Send Message", :class => "btn btn-info btn-show" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
